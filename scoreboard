/**
 *
 * @author ryan.kopach580
 */
public class ScoreBoard{ 

    public String team;
    public String team2;
    private int score;
    private int score2;
    public int timeLeft;
    private int currentPeriod;
    private final int TOTAL_TIME= 40;
    
    
    
Scoreboard(String homeName, String awayName , int pointScored, int pointScored2){
    team= homeName;
    team2= awayName;
    score= pointScored;
    score2= pointScored2;
    timeLeft = TOTAL_TIME;
    currentPeriod = 1;
}//close contructor

public int getScore(){
    return score;
}
public void setScore(int newScore){
    score = newScore;
    
}

public int getPeriod(){
    return currentPeriod;
}
public void setPeriod(int newPeriod){
    currentPeriod = newPeriod;
}
// close scoreboard
}



    
    

    

    
            
            
         


